{% extends "./base.jinja" %}

{% block title%}
Messages for {{ current_user.full_name }}
{% endblock title %}

{% block headline %}
Messages for {{ current_user.full_name }}
{% endblock headline %}


{% block content %}
<div class="container py-2">
    {% for message in messages_received %}
    <div class="card mt-2" style="width: 40rem;">
        <div class="card-body">
            <h5 class="card-title">Re: Term</h5>
            <h6 class="card-subtitle mb-2 text-muted">From: {{ message.author.full_name }}</h6>
            <p class="card-text">{{ message.body }}</p>
            <a href="{{ url_for('notify.send_message', recipient_id=message.author.id) }}"
                class="btn btn-dark btn-sm">Reply</a>
            <a href="{{ url_for('notify.delete_message', message_id=message.id) }}"
                class="btn btn-dark btn-sm">Delete</a>
        </div>
    </div>
    {% endfor %}
</div>
{% endblock content %}