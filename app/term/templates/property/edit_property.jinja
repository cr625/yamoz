{% extends 'base.jinja' %}

{% block title %}
Edit Relationship
{% endblock %}

{% block content %}
<h2>Edit Relationship</h2>
<form action="{{ url_for('term.edit_property', relationship_id=relationship.id) }}" method="post">
    {{ form.hidden_tag() }}
    <div class="form-group">
        {{ form.subject_id.label }} {{ form.subject_id(class="form-control") }}
    </div>
    <div class="form-group">
        {{ form.predicate_id.label }} {{ form.predicate_id(class="form-control") }}
    </div>
    <div class="form-group">
        {{ form.object_id.label }} {{ form.object_id(class="form-control") }}
    </div>
    <button type="submit" class="btn btn-primary">Save changes</button>
</form>
{% endblock %}