{{ pagedown.include_pagedown() }}

<div class="container mt-4">
    <form action="{{ url_for('term.add_comment', term_id=selected_term.id) }}"
    	method="post">
        {{ comment_form.hidden_tag() }}

        <div class="form-group row">
            <div class="col">
                {{ comment_form.comment_string(class="form-control", placeholder="Add comment") }}
            </div>
        </div>
        <div class="form-group row mt-2">
            <div class="col">
                {{ comment_form.hidden_tag() }}
                {{ comment_form.submit(class="btn btn-dark") }}
            </div>
        </div>
    </form>
</div>
