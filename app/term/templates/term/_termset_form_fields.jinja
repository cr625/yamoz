<div class="card col-12 mt-4">
    <h5 class="card-header">Edit Term Set</h5>
    <div class="card-body">
        <form action="{{ url_for('term.edit_termset', term_set_id=term_set.id) }}" method="post">
            {{ form.hidden_tag() }}
            <div class="row">
                <div class="col-md-8">
                    <div class="form-group row py-2">
                        {{ form.name.label(class="col-sm-3 col-form-label", for="name") }}
                        <div class="col-sm-9">
                            {{ form.name(class="form-control") }}
                        </div>
                    </div>
                    <div class="form-group row py-2">
                        {{ form.description.label(class="col-sm-3 col-form-label", for="description") }}
                        <div class="col-sm-9">
                            {{ form.description(class="form-control", rows="4") }}
                        </div>
                    </div>
                    <div class="form-group row py-2">
                        {{ form.source.label(class="col-sm-3 col-form-label", for="source") }}
                        <div class="col-sm-9">
                            {{ form.source(class="form-control") }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-group row py-2">
                <div class="col-sm-7">
                    {{ form.submit(class="btn btn-dark") }}
                </div>
            </div>
        </form>
    </div>
</div>