{% extends 'base.jinja' %}

{% block title %}
Edit Relationship
{% endblock %}

{% block content %}
<style>
    .form-control[disabled] {
        background-color: #e9ecef;
        opacity: 1;
    }
</style>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h2>Edit Relationship</h2>
                </div>
                <div class="card-body">
                    <form action="{{ url_for('term.edit_relationship', relationship_id=relationship.id) }}" method="post">
                        {{ form.hidden_tag() }}
                        <div class="form-group">
                            {{ form.subject_term_string.label }} 
                            {{ form.subject_term_string(class="form-control", disabled=True) }}
                        </div>
                        <div class="form-group">
                            {{ form.predicate_id.label }} 
                            {{ form.predicate_id(class="form-control") }}
                        </div>
                        <div class="form-group">
                            {{ form.object_term_string.label }} 
                            {{ form.object_term_string(class="form-control", disabled=True) }}
                        </div>
                        {{ form.submit(class="btn btn-dark") }}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}