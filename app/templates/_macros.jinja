{% macro nav_link(endpoint, text) -%}
<li class="nav-item">
    <a class="nav-link{% if request.url_rule.endpoint == endpoint %} active{% endif %}"
        href="{{ url_for(endpoint) }}">{{text}}</a>
</li>
{%- endmacro %}

{% macro hide_link(endpoint, text) -%}
{% if request.url_rule.endpoint != endpoint %}
<a href="{{ url_for(endpoint) }}">{{text}}</a>
{% endif %}
{%- endmacro %}

{% macro noline_link(endpoint, text) -%}
<a style="text-decoration: none; font-weight: bold"
   href="{{ endpoint }}">{{ text }}</a>
{%- endmacro %}

{% macro render_tag_pagination(pagination, endpoint, tag_id) %}
<div class=pagination>
    {%- for page in pagination.iter_pages() %}
    {% if page %}
    {% if page != pagination.page %}
    <a href="{{ url_for(endpoint, page=page, tag_id=tag_id) }}">{{ page }}</a>&nbsp;
    {% else %}
    <strong>{{ page }}</strong>&nbsp;
    {% endif %}
    {% else %}
    <span class=ellipsis>…</span>&nbsp;
    {% endif %}
    {%- endfor %}
</div>
{% endmacro %}


